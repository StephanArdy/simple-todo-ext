{
    "manifest_version": 3,
    "name": "Simple To-Do Extension",
    "version": "1.4",
    "description": "This is a simple to-do list extention to list your tasks.",
    "permissions": [
        "storage",
        "activeTab"
    ],
    "icons":{
        "16": "icons/logo16.png",
        "48": "icons/logo48.png",
        "128": "icons/logo128.png"
    },
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "icons/logo16.png",
            "48": "icons/logo48.png",
            "128": "icons/logo128.png"
        }
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "{c3114ca9-40f7-495d-a839-f8ba70928d91}"
        }
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self';"
    }
}